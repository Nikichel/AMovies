<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#191926"
    android:paddingStart="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_actor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/john_david"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundedAllCorners">

    </com.google.android.material.imageview.ShapeableImageView>
    <TextView
        android:id="@+id/name_actor"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Robert\nDowney Jr."
        android:textSize="14sp"
        android:textColor="#D8D8D8"
        android:layout_marginTop="8dp"
        android:drawablePadding="6dp"
        app:layout_constraintTop_toBottomOf="@id/image_actor">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>